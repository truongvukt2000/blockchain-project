<div class="container">
  <div class="row" style="padding-top: 50px;">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <li class="list-group-item active">Đăng nhập ví của bạn</li>
      <form method="POST" action="/login" style="display: inline;">
        <div class="form-group">
          <input
            type="text"
            name="wallet"
            class="form-control"
            placeholder="Tên ví"
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Mật khẩu"
          />
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
      </form>
      <form
        class="form"
        method="get"
        action="/register"
        style="display: inline; float:right"
      >
        <button type="submit" class="btn btn-primary">Tạo ví</button>
      </form>
    </div>
  </div>
</div>